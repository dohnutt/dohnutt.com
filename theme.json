{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
				{
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "cyan",
                    "color": "#00b39d",
                    "name": "Cyan"
                }
            ]
        },
        "typography": {
            "lineHeight": false,
            "fontWeight": false,
            "fontFamilies": [
                {
                    "fontFamily": "\"Space Mono\",-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "slug": "space-mono"
                },
				{
                    "fontFamily": "\"Inter\",-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "slug": "inter"
                }
            ],
            "fontSizes": [
				{
                    "slug": "small",
                    "size": "0.7em",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "1em",
                    "name": "Normal"
                },
                {
                    "slug": "large",
                    "size": "1.6em",
                    "name": "Large"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [ "px", "em", "rem", "vh", "vw" ],
			"blockGap": true
        },
		"useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "800px",
            "wideSize": "1040px"
        }
    },
    "styles": {
		"spacing": {
			"blockGap": "2rem",
			"padding": {
				"left": "min(4rem, 5vw)",
				"right": "min(4rem, 5vw)"
			}
		},
        "color": {
            "text": "var(--colour-primary)"
        },
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "underline"
				},
				"color": {
                    "text": "inherit"
                }
			},
			"button": {
				"typography": {
					"fontWeight": "bold"
				},
				"color": {
					"background": "var(--colour-primary)",
					"text": "var(--colour-tertiary)"
				},
				"border": {
					"radius": "4em"
				},
				":hover": {
					"color": {
						"text": "var(--colour-tertiary)",
						"background": "color-mix(in srgb, var(--colour-primary), var(--colour-tertiary) 20%)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--colour-tertiary)",
						"background": "color-mix(in srgb, var(--colour-primary), var(--colour-tertiary) 20%)"
					}
				}
			},
			"caption": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "fontFamily": "var(--wp--preset--font-family--space-mono)",
            "lineHeight": "1.7"
        }
    }
}