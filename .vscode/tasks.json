{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SCSS compile",
            "type": "shell",
            "command": "sass --style=compressed --no-source-map assets/src/sass/app.scss assets/css/app.min.css",
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "JS compile",
            "type": "shell",
            "command": "npm run build",
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
}